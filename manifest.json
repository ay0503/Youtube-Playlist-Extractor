{
  "manifest_version": 3,
  "name": "YouTube Song Extractor",
  "version": "1.0",
  "description": "Extracts songs from YouTube video pages.",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch?v=*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["activeTab", "storage"]
}
